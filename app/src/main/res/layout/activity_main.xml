<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pale_lavender"
    android:id="@+id/parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello from Phumz!"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="#7f7f7f"
        android:text="Click to change text color"
        android:textColor="@color/colorPrimaryDark"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:textSize="30sp" />
    
    <TextView
        android:layout_above="@+id/button"
        android:background="#7f7f7f"
        android:textColor="@color/colorPrimaryDark"
        android:layout_centerHorizontal="true"
        android:id="@+id/ChangeBackgroundbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click to change background color"
        android:layout_margin="20dp"
        android:padding="10dp"
        android:textSize="20sp" />

    <TextView
        android:layout_above="@+id/ChangeBackgroundbutton"
        android:background="#7f7f7f"
        android:textColor="@color/colorPrimaryDark"
        android:layout_centerHorizontal="true"
        android:id="@+id/ChangeTextbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click to change text"
        android:layout_margin="2dp"
        android:padding="10dp"
        android:textSize="30sp" />

    <EditText
        android:layout_above="@id/ChangeTextbutton"
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Create your own text!" />

    <TextView
        android:layout_above="@+id/ChangeTextbutton"
        android:background="#7f7f7f"
        android:textColor="@color/colorPrimaryDark"
        android:layout_centerHorizontal="true"
        android:id="@+id/ChangecustomTextbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click to change to custom text"
        android:layout_marginBottom="60dp"
        android:textSize="26sp"
        android:padding="10dp" />

</RelativeLayout>
